---
interface Props {
  posts: { date: string; title: string; description: string }[];
}

const { posts } = Astro.props;
---

<div class="container py-4 -translate-x-2">
  <div class="relative">
    <!-- 时间线轴线 -->
    <div
      class="absolute left-4 top-0 h-full w-0.5 -translate-x-0.25 bg-slate-500"
    >
    </div>

    <!-- 时间线节点 -->
    <div class="relative">
      <!-- 节点 1 -->
      {
        posts.map((item) => (
          <div class="flex items-start mb-4">
            <div class="absolute left-4 -translate-x-1/2 w-3 h-3 bg-orange-500 dark:bg-purple-500 rounded-full border-black" />
            <div class="ml-8 -translate-y-1">
              <span class="text-slate-500 dark:text-slate-400 text-sm">
                {item.date}
              </span>
              <div class="flex flex-col gap-1">
                <h2 class="dark:text-slate-300 cursor-pointer underline decoration-wavy hover:text-orange-500 dark:hover:text-purple-500">
                  <a href="/post/1"> {item.title} </a>
                </h2>
                <p>{item.description}</p>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </div>

  <div
    class="translate-x-3 underline decoration-wavy hover:text-orange-500 dark:hover:text-purple-500 cursor-pointer"
  >
    More
  </div>
</div>
