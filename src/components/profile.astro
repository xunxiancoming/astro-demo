---
import Greeting from "./preact/greet";
import { Badge } from "./ui/badge";
import { Card } from "./ui/card";
---

<Card className="w-1/3">
  <div class="flex items-center justify-center mb-4">
    <img
      src="/avatar.jpeg"
      alt="Profile Picture"
      class="w-24 h-24 rounded-full outline-2"
    />
  </div>
  <Greeting
    client:only="preact"
    messages={["你好", "Hello", "今日は", "Bonjour"]}
  />
  <div class="my-2 gap-1 flex flex-col">
    <Badge
      variant="secondary"
      className="bg-slate-800 text-slate-500 dark:bg-slate-400 dark:text-slate-800"
    >
      职业：Web前端开发
    </Badge>
    <Badge
      variant="secondary"
      className="bg-slate-800 text-slate-500 dark:bg-slate-400 dark:text-slate-800"
    >
      兴趣爱好：编程、摄影、旅游
    </Badge>
    <Badge
      variant="secondary"
      className="bg-slate-800 text-slate-500 dark:bg-slate-400 dark:text-slate-800"
    >
      邮箱：1475711781@qq.com
    </Badge>
  </div>
</Card>
