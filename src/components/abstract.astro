---
import type Article from "@/interfaces/article";
import dayjs from "dayjs";

const { post } = Astro.props as { post: Article };
---

<div class="flex flex-col gap-1">
  <h1
    class="dark:text-slate-300 text-xl hover:text-orange-500 dark:hover:text-purple-500 cursor-pointer"
  >
    <a href=`/kblog/post/${post.documentId}`>{post.title}</a>
  </h1>
  <div class="text-slate-600 dark:text-slate-400">
    {dayjs(post.createdAt).format("MMMM DD, YYYY")} ðŸ¤— 1 minute read
  </div>
  <p class="text-slate-600 dark:text-slate-400">
    {post.description}
  </p>
</div>
